<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ts.kaikei.dao.StatementDAO">

    <select id="getStatementList" resultType="StatementVO">
	    SELECT company_cd, seq, account_cd, customer_cd, date, classify, debtor, creditor, abs
	    FROM statements
	    ORDER BY seq ASC
    </select>
    
    <select id="getStatements" parameterType="String" resultType="StatementVO">
    	select *
    	from statements
    	where company_cd = #{value}
    </select>
    
    <select id="getMaxSeq" parameterType="String" resultType="Integer">
    	select Max(seq)
    	from statements
    	where company_cd = #{value}
    </select>
        
    <insert id="insertRandom">    
